<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <description>
    	Configuration for the default TicketRegistry which stores the tickets in-memory and cleans them out as specified intervals.
    </description>
       
    <!-- Ticket Registry -->
	<bean id="ticketRegistry" class="edu.asu.cas.riak.RiakTicketRegistry">
		<constructor-arg index="0" type="java.lang.String" value="http://localhost:3002/guster"/> <!-- url -->
		<constructor-arg index="1" type="int" value="3000"/> <!-- timeoutMilliseconds -->
		<constructor-arg index="2" type="int" value="50"/> <!-- maxConnections -->
	</bean>
	
